.wide_bg.main_img_container
  .wrapper.main_event_container.topper
    .event_month_title
      %h1
        %span= l @event.date, format: :month
    .event_date
      %h2= l @event.date, format: :short_date
    .event_topic_container
      = image_tag 'open_mic.png', :alt => 'Open Mic Night', :class => "open_mic_image"
      %h3.center-it.cap-it.sub_event_header Open Mic Night
      %p.topic_details= @event.description
    %a.btn.red_btn.join_btn{href: @event.url, target: '_blank'}
      Join This Talk
.wide_bg.gray_bg
  .wrapper.main_event_container
    .two_column
      .column.column_1
        %h3
          Where
        %p
          #{@event.location.name}
          %br
          #{@event.location.address}
          %br
          #{@event.location.city} #{@event.location.state}, #{@event.location.zip}
      .column.column_2
        %h3
          When
        %p
          #{l @event.date, format: :hour_minute} - #{l @event.date + 3.hours, format: :hour_minute}