= form_for(@talk) do |f|
  - if @talk.errors.any?
    #error_explanation
      %h2
        = pluralize(@talk.errors.count, "error")
        prohibited this talk from being saved:
      %ul
        - @talk.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .actions
    = f.submit