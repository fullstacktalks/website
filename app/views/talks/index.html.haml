%h1 Listing talks
%table
  %tr
    %th Title
    %th Description
    %th
    %th
    %th
  - @talks.each do |talk|
    %tr
      %td= talk.title
      %td= talk.description
      %td= link_to 'Show', talk
      %td= link_to 'Edit', edit_talk_path(talk)
      %td= link_to 'Destroy', talk, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Talk', params[:event_id] ? new_event_talk_path : new_talk_path